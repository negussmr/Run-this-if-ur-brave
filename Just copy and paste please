<script>
/* ============== Utilities ============== */
const rnd = (min, max) => Math.floor(Math.random()*(max-min+1))+min;
const pick = arr => arr[rnd(0, arr.length-1)];

let running = true;

/* ============== Progress "installer" ============== */
const progressEl = document.getElementById('progress');
const marquee = document.getElementById('marqueeText');
const tick = document.getElementById('tick');

let progress = 0;
const fakeTasks = [
  "Warming up silliness",
  "Unleashing internet spirits",
  "Compiling dad jokes",
  "Feeding the memes",
  "Polishing sarcasm",
  "Summoning the emoji bomb",
  "Reticulating splines"
];

function startFakeProgress(){
  progress = 0;
  progressEl.style.width = '0%';
  marquee.textContent = "INITIALIZING...";
  let idx = 0;
  const t = setInterval(()=>{
    if(!running){ clearInterval(t); return; }
    progress += rnd(2,8);
    if(progress > 100) progress = 100;
    progressEl.style.width = progress + '%';
    marquee.textContent = fakeTasks[idx % fakeTasks.length] + ' ‚Äî ' + progress + '%';
    tick.textContent = pick(['‚è≥','‚öôÔ∏è','üß™','ü§£','üî•','üîß']) + ' ';
    idx++;
    if(progress >= 100){
      clearInterval(t);
      setTimeout(()=>{ prankReveal(); }, 700);
    }
  }, 600);
}
startFakeProgress();

/* ============== Meme drag + tiny wobble ============== */
document.querySelectorAll('.meme').forEach(el => {
  el.addEventListener('mousedown', e => {
    el.style.cursor = 'grabbing';
  });
  el.addEventListener('mouseup', e => {
    el.style.cursor = 'grab';
  });
  el.addEventListener('dragstart', e => {
    e.preventDefault();
  });

  // little wiggle on hover
  el.addEventListener('mouseenter', () => {
    el.animate([
      { transform: 'translateY(0) rotate(0deg)' },
      { transform: 'translateY(-6px) rotate(-2deg)' },
      { transform: 'translateY(0) rotate(2deg)' }
    ], { duration: 700, iterations: 2 });
  });
});

/* ============== Emoji shower ============== */
const emojis = ['üòÇ','ü§£','üòà','üëÄ','üî•','üí•','ü§°','üôÉ','ü•∏','üçï','üßã','üíÄ','üéâ','‚ú®','ü™≤','ü¶ã'];

function spawnEmoji(x,y,emoji){
  const node = document.createElement('div');
  node.className = 'emoji';
  node.style.left = (x||rnd(10,innerWidth-40)) + 'px';
  node.style.top = (y||-50) + 'px';
  node.style.fontSize = rnd(18,46)+'px';
  node.textContent = emoji || pick(emojis);
  document.body.appendChild(node);

  const duration = rnd(3000,7000);
  const horiz = rnd(-200,200);
  const rotate = rnd(-720,720);
  const start = performance.now();

  function frame(now){
    const t = Math.min(1, (now-start)/duration);
    node.style.transform = `translate(${Math.easeInOutQuad(t)*horiz}px, ${Math.easeOut(t)* (innerHeight + 120)}px) rotate(${rotate * t}deg)`;
    node.style.opacity = String(1 - t);
    if(t < 1 && running) requestAnimationFrame(frame);
    else node.remove();
  }
  requestAnimationFrame(frame);
}

Math.easeOut = t => 1 - Math.pow(1 - t, 3);
Math.easeInOutQuad = t => t<.5 ? 2*t*t : -1 + (4 - 2*t)*t;

/* spawn a few on load for dramatic effect */
for(let i=0;i<18;i++){
  setTimeout(()=>spawnEmoji(undefined, -50), i*160);
}

/* button to spawn a bomb of emoji */
document.getElementById('spawnEmoji').addEventListener('click', ()=>{
  for(let i=0;i<32;i++){
    setTimeout(()=>spawnEmoji(rnd(20,innerWidth-80), -40, pick(emojis)), i*40);
  }
});

/* ============== prank reveal ============== */
function prankReveal(){
  if(!running) return;
  // change the grid memes quickly and bounce
  const grid = document.getElementById('memeGrid');
  const texts = [
    "You just got trolled!",
    "¬Ø\\_(„ÉÑ)_/¬Ø",
    "No, seriously, you did.",
    "Hope you like confetti.",
    "Press PANIC if you regret this.",
    "This message will self-destruct in 0 seconds."
  ];
  Array.from(grid.children).forEach((c,i)=>{
    c.textContent = texts[i % texts.length];
    c.animate([
      { transform: 'scale(1) rotate(0deg)' },
      { transform: 'scale(1.08) rotate(2deg)' },
      { transform: 'scale(1) rotate(-2deg)' }
    ], { duration: 900, iterations: 3, delay: i*120 });
  });

  // cascade many emoji
  for(let i=0;i<120;i++){
    setTimeout(()=>spawnEmoji(rnd(0,innerWidth), -30), i*30);
  }

  // flashing marquee
  const m = document.getElementById('marqueeText');
  let flashCount = 0;
  const flash = setInterval(()=>{
    if(!running){ clearInterval(flash); return; }
    m.style.color = flashCount % 2 === 0 ? '#ffd166' : '#ff6b6b';
    flashCount++;
    if(flashCount > 30) clearInterval(flash);
  },120);
}

/* ============== Sound (user must click to allow audio) ============== */
const audioCtx = new (window.AudioContext || window.webkitAudioContext)();
let isPlaying = false;
function playSillyTune(){
  if(isPlaying) return;
  isPlaying = true;
  const o = audioCtx.createOscillator();
  const g = audioCtx.createGain();
  o.type = 'sawtooth';
  o.frequency.setValueAtTime(440, audioCtx.currentTime);
  o.connect(g);
  g.connect(audioCtx.destination);
  g.gain.setValueAtTime(0.0001, audioCtx.currentTime);
  g.gain.exponentialRampToValueAtTime(0.05, audioCtx.currentTime + 0.02);
  o.start();
  // playful arpeggio
  let t = audioCtx.currentTime;
  const notes = [440, 660, 880, 1100, 880, 660, 440];
  notes.forEach((n,i)=> {
    o.frequency.setValueAtTime(n, t + i*0.12);
  });
  setTimeout(()=>{
    g.gain.exponentialRampToValueAtTime(0.0001, audioCtx.currentTime + 0.6);
    setTimeout(()=>{ o.stop(); isPlaying=false; },800);
  }, 1200);
}
document.getElementById('toggleMusic').addEventListener('click', ()=>{
  try{ audioCtx.resume().then(()=>playSillyTune()); } catch(e){}
});

/* ============== invert colors button ============== */
let inverted = false;
document.getElementById('invertBtn').addEventListener('click', ()=>{
  inverted = !inverted;
  if(inverted) document.documentElement.style.filter = 'invert(1) hue-rotate(180deg)';
  else document.documentElement.style.filter = '';
});

/* ============== Panic / Calm ============== */
function stopAll(){
  running = false;
  progressEl.style.width = '0%';
  marquee.textContent = 'STOPPED.';
  // remove emojis quickly
  document.querySelectorAll('.emoji').forEach(n => n.remove());
  // restore any filters
  document.documentElement.style.filter = '';
  document.querySelectorAll('.meme').forEach(m=>{
    m.style.transform = '';
  });
}
function calm(){
  running = true;
  marquee.textContent = 'Calm mode ‚Äî minimal trolling';
  startFakeProgress(); // resume light activity
}

document.getElementById('panic').addEventListener('click', ()=>{ stopAll(); });
document.getElementById('calm').addEventListener('click', ()=>{ calm(); });

/* ============== Cursor antics (mild) ============== */
let wiggle = false;
document.addEventListener('mousemove', e => {
  if(!running) return;
  if(rnd(0,600) > 598 && !wiggle){
    wiggle = true;
    const x = e.clientX, y = e.clientY;
    const notice = document.createElement('div');
    notice.textContent = pick(['Hehe','Gotcha','üëÄ','Wow','Impossible!','Nope']);
    notice.style.position='fixed';
    notice.style.left=(x+10)+'px';
    notice.style.top=(y+10)+'px';
    notice.style.padding='6px 10px';
    notice.style.borderRadius='8px';
    notice.style.fontWeight='700';
    notice.style.background='rgba(255,255,255,0.06)';
    notice.style.backdropFilter='blur(4px)';
    notice.style.pointerEvents='none';
    notice.style.zIndex=99999;
    document.body.appendChild(notice);
    notice.animate([
      { transform:'translateY(0)', opacity:1 },
      { transform:'translateY(-40px)', opacity:0 }
    ], { duration:900, easing:'ease-out' });
    setTimeout(()=>{ notice.remove(); wiggle=false; },1000);
  }
});

/* ============== Prevent annoying things: avoid infinite alert loops ============== */
/* intentionally left blank: we will not use alert loops (browsers block them). */

/* ============== Cleanup before unload (so it's not too malicious) ============== */
window.addEventListener('beforeunload', ()=> {
  // quickly try to stop any audio if playing
  try { if(audioCtx && audioCtx.state !== 'closed') audioCtx.suspend(); } catch(e){}
});

/* ============== Extra: Konami-ish mini easter egg ============== */
const konami = [38,38,40,40,37,39,37,39,66,65];
let kpos = 0;
window.addEventListener('keydown', (e)=>{
  if(e.keyCode === konami[kpos]){
    kpos++;
    if(kpos === konami.length){
      kpos = 0;
      // full-on confetti drop
      for(let i=0;i<180;i++) setTimeout(()=>spawnEmoji(rnd(0,innerWidth), -20, pick(['üéâ','‚ú®','üéä','ü™©','üçï','üç©'])), i*12);
    }
  } else {
    kpos = 0;
  }
});

</script>
</body>
